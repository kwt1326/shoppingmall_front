{
  "name": "shopping_mall_webapp",
  "version": "1.0.0",
  "description": "typescript + webpack 5 + react + express(ssr server)",
  "main": "config/index.d.ts",
  "scripts": {
    "build:server": "NODE_ENV=production PORT=3000 webpack --config ./config/webpack.server.config.js",
    "build:client": "NODE_ENV=production PORT=3000 webpack --config ./config/webpack.client.config.js",
    "build:server:dev": "NODE_ENV=development PORT=3000 webpack --config ./config/webpack.server.config.js",
    "build:client:dev": "NODE_ENV=development PORT=3000 webpack --config ./config/webpack.client.config.js",
    "build:dev": "npm run build:client:dev && npm run build:server:dev",
    "build": "npm run build:client && npm run build:server",
    "start:prod": "NODE_ENV=production PORT=3000 node ./dist/server.js",
    "start": "npm run build:dev && nodemon --watch ./server --watch ./src --exec 'node ./dist/server.js -e ts'"
  },
  "author": "wontae Kim",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.14.8",
    "@babel/preset-env": "^7.14.8",
    "@babel/preset-react": "^7.14.5",
    "@babel/preset-typescript": "^7.14.5",
    "@types/axios": "^0.14.0",
    "@types/express": "^4.17.13",
    "@types/node": "^16.4.13",
    "@types/react": "^17.0.15",
    "@types/react-dom": "^17.0.9",
    "@types/react-redux": "^7.1.18",
    "@types/react-router-dom": "^5.1.8",
    "@types/redux": "^3.6.0",
    "@types/webpack-env": "^1.16.2",
    "@typescript-eslint/eslint-plugin": "^4.29.0",
    "@typescript-eslint/parser": "^4.29.0",
    "babel-loader": "^8.2.2",
    "clean-webpack-plugin": "^4.0.0-alpha.0",
    "css-loader": "^4.3.0",
    "esbuild-loader": "^2.15.0",
    "fibers": "^5.0.0",
    "husky": "^7.0.1",
    "mini-css-extract-plugin": "^2.1.0",
    "nodemon": "^2.0.12",
    "sass": "^1.36.0",
    "sass-loader": "^12.1.0",
    "style-loader": "^3.2.1",
    "ts-loader": "^9.2.4",
    "typescript": "^4.3.5",
    "webpack": "^5.47.1",
    "webpack-cli": "^4.7.2",
    "webpack-dev-middleware": "^5.0.0",
    "webpack-hot-middleware": "^2.25.0",
    "webpack-manifest-plugin": "^3.1.1",
    "webpack-node-externals": "^3.0.0"
  },
  "dependencies": {
    "express": "^4.17.1",
    "framer-motion": "^4.1.17",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-redux": "^7.2.4",
    "react-router-dom": "^5.2.0",
    "redux": "^4.1.1"
  },
  "jest": {
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
      "\\.(css|less|scss|sass)$": "identity-obj-proxy"
    },
    "setupFilesAfterEnv": [
      "./jest.setup.js"
    ],
    "testRegex": "\\.test.[jt]sx?$"
  }
}
